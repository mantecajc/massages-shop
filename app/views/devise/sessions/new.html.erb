<div
  class="min-h-full flex items-center justify-center pb-12 px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-md w-full space-y-8">
    <div>
      <img src="<%= asset_path 'logo.svg' %>" alt="logo" class="mx-auto h-42 w-42">
      <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
        Se connecter
      </h2>
      <%- if devise_mapping.registerable? && controller_name != 'registrations'
      %>
      <p class="mt-2 text-center text-sm text-gray-600">
        Or <%= link_to "sign up", new_registration_path(resource_name), class:
        "font-medium text-paradiso-600 hover:text-paradiso-500" %>
      </p>
      <% end %>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name),
    html: { data: { turbo: false} }) do |f| %>
    <div class="mt-8 space-y-6">
      <input type="hidden" name="remember" value="true" />
      <div class="rounded-md shadow-sm -space-y-px">
        <div>
          <%= f.label :email, class: "sr-only", for: "email-address" %> <%=
          f.email_field :email, id: "email-address", autofocus: true,
          autocomplete: "email", placeholder: "Adresse e-mail", class:
          "appearance-none rounded-none relative block w-full px-3 py-2 border
          border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md
          focus:outline-none focus:ring-ripe-lemon-500 focus:border-ripe-lemon-500
          focus:z-10 sm:text-sm" %>
        </div>
        <div>
          <%= f.label :password, for: "password", class: "sr-only" %> <%=
          f.password_field :password, id: "password", autocomplete:
          "current-password", placeholder: "Mot de passe", class: "appearance-none
          rounded-none relative block w-full px-3 py-2 border border-gray-300
          placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none
          focus:ring-ripe-lemon-500 focus:border-ripe-lemon-500 focus:z-10 sm:text-sm"
          %>
        </div>
      </div>
      <% if devise_mapping.rememberable? %>
      <div class="flex items-center justify-between">
        <div class="field flex items-center">
          <%= f.check_box :remember_me, class: "h-4 w-4 text-paradiso-600
          focus:ring-paradiso-500 border-gray-300 rounded" %>
          <%= f.label :remember_me, class: "ml-2 block text-sm text-gray-900" do %>Rester connecté<% end %>
        </div>
        <div class="text-sm">
          <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "Vous avez oublié votre mot de passe ?", new_password_path(resource_name), class: "font-medium text-paradiso-500 hover:text-paradiso-600" %>
          <% end %>
        </div>
      </div>
      <% end %>
      <div class="actions">
        <%= f.submit "Me connecter", class: "actions group relative w-full flex
        justify-center py-2 px-4 border border-transparent text-sm font-medium
        rounded-md text-white bg-paradiso-500 hover:bg-paradiso-600
        focus:outline-none focus:ring-2 focus:ring-offset-2
        focus:ring-ripe-lemon-500" %>
      </div>
    </div>
    <% end %>
  </div>
</div>