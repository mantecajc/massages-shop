<div id="home_body" class="flex flex-col lg:flex-row overflow-y-auto overflow-x-hidden lg:overflow-visible">
  <div class="flex flex-col items-center grow w-full lg:mr-2 lg:items-left">
    <h1 class="font-bold font-charmonman text-primaryGreen py-4 px-4 text-[1.8rem] md:px-10 md:text-[2.5rem] leading-[3.5rem] lg:leading-[5rem] xl:leading-[5rem] lg:text-[3.4rem] xl:text-6xl sm:py-6 lg:py-12 lg:pr-0 lg:pl-4 xl:pl-4 text-center lg:text-left">Les Massages de Pauline</h1>
    <div class="relative w-fit lg:w-full">
      <%= cl_image_tag home.try(:secondary_photo).key, crop: :fill, class: "lg:hidden" %>
      <%= cl_image_tag home.try(:primary_photo).key, crop: :fill, class: "hidden lg:block lg:h-auto lg:w-4/5" %>
      <div class="box-border absolute -top-12 w-20 h-20 md:w-28 md:h-28 -left-10 lg:w-32 lg:h-32 lg:-left-16 lg:top-12 border-2 border-yellow-400 transform rotate-45"></div>
      <div class="box-border absolute w-24 h-24 lg:w-32 lg:h-32 -right-10 -bottom-4 lg:right-[4.5rem] lg:-bottom-12 border-2 border-yellow-400 transform rotate-45"></div>
      <div class="box-border absolute w-[5.6rem] h-[5.6rem] -right-[2.33rem] -bottom-[0.83rem] lg:w-[7.5rem] lg:h-[7.5rem] lg:right-[4.75rem] lg:-bottom-11 border-2 border-yellow-400 transform rotate-45"></div>
    </div>
  </div>
  <div class="flex flex-col-reverse lg:flex-col items-center grow w-full lg:pt-32 lg:ml-2 lg:items-left">
    <div class="relative w-full lg:w-11/12">
      <%= cl_image_tag home.try(:secondary_photo).key, crop: :fill, class: "hidden w-full h-auto lg:block" %>
      <div class="hidden lg:block box-border absolute w-40 h-40 -right-16 -top-16 border-2 border-yellow-400 transform rotate-45"></div>
    </div>
    <div class="w-full lg:w-11/12 px-10 md:px-20 py-8 text-left md:py-16 lg:px-0">
      <h2 class="font-bold font-charmonman text-primaryGreen text-[1.4rem] md:text-[1.6rem] md:text-3xl lg:text-3xl"><%= home.try(:title) %></h2>
      <p class="font-comfortaa text-[0.8rem] md:text-base text-titleGray pt-6"><%= home.try(:description) %></p>
    </div>
  </div>
</div>