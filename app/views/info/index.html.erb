<div class="flex flex-col-reverse lg:flex-row w-full lg:h-full">
  <div class="w-full lg:w-[60%] pt-8 lg:pt-0">
		<div class="font-comfortaa text-[15px] text-titleGray px-10 lg:py-8 lg:px-10 xl:px-40">
			<h2 class="mb-4 font-bold font-charmonman text-paradiso-500 text-[1.5rem] lg:text-[1.6rem] lg:text-3xl lg:text-3xl">Nous contacter</h2>
			<!-- TODO: Hacerlo dinámico -->
			<%# TODO: Aadd form %>
			<p class="mb-8 text-titleGray">Une question sur l'un de nos soins ? Vérifiez nos disponibilités ? Vous voulez nous faire part de vos commentaires ? Nous sommes à votre écoute ! Ouvert du lundi au samedi de 9h à 19h.</p>
			<%= form_with url: contact_path, method: :post , class: "space-y-4" do |f| %>
				<div class="mt-4">
					<%= f.label :name, class: "block mb-2 text-sm font-medium text-gray-900" do %>Votre nom<% end %>
					<%= f.text_field :name, class: "shadow-sm appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-ripe-lemon-500 focus:border-ripe-lemon-500 focus:z-10 sm:text-sm", placeholder: "Nom", required: true %>
				</div>
				<div class="mt-4">
					<%= f.label :email, class: "block mb-2 text-sm font-medium text-gray-900" do %>Email<% end %>
					<%= f.text_field :email, class: "shadow-sm appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-ripe-lemon-500 focus:border-ripe-lemon-500 focus:z-10 sm:text-sm", placeholder: "nom@lesmassages.fr", required: true %>
				</div>
				<div class="mt-4">
					<%= f.label :subject, class: "block mb-2 text-sm font-medium text-gray-900" do %>Objet<% end %>
					<%= f.text_field :subject, class: "shadow-sm appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-ripe-lemon-500 focus:border-ripe-lemon-500 focus:z-10 sm:text-sm", placeholder: "Objet", required: true %>
				</div>
				<div class="mt-4">
					<%= f.label :message, class: "block mb-2 text-sm font-medium text-gray-900" do %>Votre message<% end %>
					<%= f.text_area :message, class: "shadow-sm appearance-none rounded-md relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 focus:outline-none focus:ring-ripe-lemon-500 focus:border-ripe-lemon-500 focus:z-10 sm:text-sm lg:min-h-[8rem]", placeholder: "Comment pouvons-nous vous aider ?", required: true %>
				</div>
				<div class="mt-4">
					<%= f.submit "Envoyer", class: "font-comfortaa text-[15px] text-white w-fit whitespace-nowrap flex justify-center py-4 px-10 bg-paradiso-500 hover:bg-paradiso-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-ripe-lemon-500 h-fit" %>
				</div>
			<% end %>
		</div>
  </div>
	<div class="w-full h-[25rem] px-10 lg:hidden"
		data-controller="map"
    data-map-markers-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
	</div>
  <div class="hidden lg:block h-full w-[40%] px-0"
    data-controller="map"
    data-map-markers-value="<%= @marker.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
	</div>
</div>
